[Unit]
Description=Milton Morning Briefing (NEXUS)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
WorkingDirectory=/home/cole-hanan/milton
Environment="PATH=/home/cole-hanan/miniconda3/envs/milton/bin:/usr/local/bin:/usr/bin"
ExecStart=/home/cole-hanan/miniconda3/envs/milton/bin/python3 /home/cole-hanan/milton/scripts/nexus_morning.py
StandardOutput=journal
StandardError=journal
TimeoutStartSec=600

[Unit]
Description=Milton Evening Briefing
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
WorkingDirectory=%h/milton
Environment="PATH=%h/miniconda3/envs/milton/bin:/usr/local/bin:/usr/bin"
ExecStart=/bin/bash -c '%h/miniconda3/envs/milton/bin/python3 %h/milton/scripts/evening_briefing.py --non-interactive && %h/miniconda3/envs/milton/bin/python3 %h/milton/scripts/send_briefing_to_phone.py --method ntfy --briefing evening'
StandardOutput=journal
StandardError=journal
TimeoutStartSec=300

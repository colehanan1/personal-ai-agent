#!/bin/bash
# Quick command to ask Milton a question from SSH
# Usage: ask-milton "Your question here"

if [ -z "$1" ]; then
    echo "Usage: ask-milton \"Your question here\""
    echo ""
    echo "Examples:"
    echo "  ask-milton \"What is the weather?\""
    echo "  ask-milton \"Write a Python function for factorial\""
    exit 1
fi

TOPIC="milton-briefing-code-ask"
QUESTION="$1"

echo "ğŸ“¤ Sending to Milton: $QUESTION"
curl -s -d "$QUESTION" "ntfy.sh/$TOPIC" > /dev/null

if [ $? -eq 0 ]; then
    echo "âœ… Question sent!"
    echo "ğŸ“± Check your iPhone for the response (milton-briefing-code)"
else
    echo "âŒ Failed to send question"
fi
